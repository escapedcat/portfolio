
extends layout

block append vars
  - bodyclass = 'article-detail'

block prepend title
  | #{ page.title + " - "}

block content
  article.article
    section.article-content
      h1.box__title
        | #{page.title}
        br
        span.title__company #{page.metadata.company}

      .box__content!= typogr(page.html).typogrify()


    section.tools
      - var tags= env.helpers.getTagsFromArticle(page)
      .box--tools
      
      h1.box__title Tools invloved
      
      .box__content
        ul.list-tools
          each tag in tags
            li.list-tools__item
              a(href=env.helpers.getTagHome(tag).url)= tag


